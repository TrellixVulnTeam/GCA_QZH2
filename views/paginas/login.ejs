<!DOCTYPE html>
<html lang="pt-br">
  <% include ../templates/configs %>
<body id="grad1">

  <div id="msgAlerta"></div>
  <div class="panel panel-default panel-login">
    <div class="panel-body">
      <img style="width: 50%; margin-left: 80px" src="images/Logo GCA.png">
      <form action="/" method="post" class="form-horizontal">
        <div class="form-group">
          <div class="col-xs-10">
            <input type="email" class="form-control" name="email" id="email"
              placeholder="Email"
              pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required
              style="margin-top: 40px; margin-left: 30px;">
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-10">
            <input type="password" class="form-control" id="senha"
              name="senha" placeholder="Senha" style="margin-left: 30px;">
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default btn-lg btn-block btn-primary botaoForm">Login</button>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-lg-11">
              <div class="text-center">
                <a href='/cadastraAdmin' style="width: auto; margin-left: -5px;" tabindex="5">Novo
                  admin?</a>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>



	 <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="javascripts/bootstrap.min.js"></script>
    <script>
      var alerta = <%- JSON.stringify(resposta) %>;;
      $(document).ready(function() {
        if(alerta == "pw"){
          $("#senha").addClass("erro");
          document.getElementById("msgAlerta").innerHTML = '<div class="alert alert-danger alerta-alertaerro" role="alert"><strong>Senha Incorreta!</strong></div>';
        }else if (alerta == "user") {
          $("#email").addClass("erro");
          document.getElementById("msgAlerta").innerHTML = '<div class="alert alert-danger alerta-alertaerro" role="alert"><strong>Usuário não encontrado!</strong></div>';
        }else if(alerta == "off"){
          document.getElementById("msgAlerta").innerHTML = '<div class="alert alert-info alerta-alertaerro" role="alert"><strong>Deslogado com sucesso!</strong></div>';
        }
      });
    </script>
</body>

</html>
